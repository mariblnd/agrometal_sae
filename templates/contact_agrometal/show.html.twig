		<div class="contactform-contentWrap">
			<div class="contactform-title">
				<h1>Entreprise contact</h1>
				<h3>Toutes les coordonnées de l'entreprise, avec les réseaux sociaux</h3>
			</div>
            <div class="contactform-input">
                <label for="admin-email">E-Mail</label>
                <input style="max-width: none;" type="text" name="mail" id="admin-email" class="form-control" placeholder="{{ contact_agrometal.email }}" readonly>
            </div>
            <div class="contactform-input">
                <label for="admin-telephone">Téléphone</label>
                <input style="max-width: none;" type="text" name="mail" id="admin-telephone" class="form-control" placeholder="{{ contact_agrometal.telephone }}" readonly>
            </div>
            <div class="contactform-input">
                <label for="admin-adresstitle">Nom de l'adresse</label>
                <input style="max-width: none;" type="text" name="mail" id="admin-adresstitle" class="form-control" placeholder="{{ contact_agrometal.adressTitle }}" readonly>
            </div>
            <div class="contactform-input">
                <label for="admin-adress">Adresse</label>
                <input style="max-width: none;" type="text" name="mail" id="admin-adress" class="form-control" placeholder="{{ contact_agrometal.adress }}" readonly>
            </div>
            {% if contact_agrometal.instagramActive %}
                <div class="contactform-input">
                    <label for="admin-instagram">Instagram</label>
                    <input style="max-width: none;" type="text" name="mail" id="admin-instagram" class="form-control" placeholder="{{ contact_agrometal.instagram }}" readonly>
