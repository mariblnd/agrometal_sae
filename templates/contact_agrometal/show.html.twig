            {% endif %}
            {% if contact_agrometal.linkedinActive %}
                <div class="contactform-input">
                    <label for="admin-linkedin">LinkedIn</label>
                    <input style="max-width: none;" type="text" name="mail" id="admin-linkedin" class="form-control" placeholder="{{ contact_agrometal.linkedin }}" readonly>
                </div>
            {% endif %}
            {% if contact_agrometal.facebookActive %}
                <div class="contactform-input">
                    <label for="admin-facebook">Facebook</label>
                    <input style="max-width: none;" type="text" name="mail" id="admin-facebook" class="form-control" placeholder="{{ contact_agrometal.facebook }}" readonly>
                </div>
            {% endif %}
            <div class="adminbase-categorywrap">
                <a class="adminbase-categorybtn hover-btn" href="{{ path('app_contact_agrometal_edit', {'id': contact_agrometal.id}) }}">Modifier</a>

                {% set currentUrl = app.request.getRequestUri() %}
                {% set urlSegments = currentUrl|split('/') %}
                {% set levelsToGoUp = 2 %}
                {% set parentUrl = urlSegments|slice(0, -levelsToGoUp)|join('/') %}
