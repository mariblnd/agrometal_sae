

{% extends 'admin_base.html.twig' %}

{% block main %}
    <h1>Equipments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ equipment.image }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ equipment.title }}</td>
            </tr>
            <tr>
                <th>Preview</th>
                <td>{{ equipment.preview ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description_long</th>
                <td>{{ equipment.descriptionLong }}</td>
            </tr>
            <tr>
                <th>Description_short</th>
                <td>{{ equipment.descriptionShort }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipments_index') }}">back to list</a>

    <a href="{{ path('app_equipments_edit', {'id': equipment.id}) }}">edit</a>

    {{ include('equipments/_delete_form.html.twig') }}
