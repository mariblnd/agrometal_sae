{% extends 'admin_base.html.twig' %}

{% block main %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Logo</th>
                <th>Title</th>
                <th>Website</th>
                <th>Description</th>
                <th>Company_name</th>
                <th>Partner_from</th>
                <th>Creation_date</th>
                <th>Region</th>
                <th>Margin_top</th>
                <th>Margin_left</th>
                <th>InstagramActive</th>
                <th>Instagram</th>
                <th>LinkedinActive</th>
                <th>Linkedin</th>
                <th>FacebookActive</th>
                <th>Facebook</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.logo }}</td>
                <td>{{ entreprise.title }}</td>
                <td>{{ entreprise.website }}</td>
                <td>{{ entreprise.description }}</td>
                <td>{{ entreprise.companyName }}</td>
                <td>{{ entreprise.partnerFrom }}</td>
                <td>{{ entreprise.creationDate }}</td>
                <td>{{ entreprise.region }}</td>
                <td>{{ entreprise.marginTop }}</td>
                <td>{{ entreprise.marginLeft }}</td>
                <td>{{ entreprise.instagramActive ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.instagram }}</td>
                <td>{{ entreprise.linkedinActive ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.linkedin }}</td>
                <td>{{ entreprise.facebookActive ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.facebook }}</td>
                <td>
                    <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entreprise_new') }}">Create new</a>
{% endblock %}
